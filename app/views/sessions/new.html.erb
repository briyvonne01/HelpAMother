<div>
    <% if flash[:alert] %>
        <p id="notice"><%= flash[:alert]  %></p>
    <% end %>

  <%= form_tag do %>
      <fieldset>
        <legend>Please log in</legend>
        <div>
          <%= label_tag :email, 'Email' %>
          <%= text_field :email, params[:email] %>
          <%= label_tag :password, 'Password' %>
          <%= password_field_tag :password, params[:password] %>
        </div>
        <div>
          <%= submit_tag "Login" %>
        </div>
      </fieldset>
  <% end %>

</div>